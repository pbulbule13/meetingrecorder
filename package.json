{
  "name": "nexus-assistant",
  "version": "1.0.0",
  "description": "Ultimate Meeting Intelligence & Knowledge Management System",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:python\" \"npm run dev:react\"",
    "dev:electron": "electron . --inspect=5858",
    "dev:react": "webpack serve --mode development --config webpack.config.js",
    "dev:python": "cd src/python && python -m uvicorn main:app --reload --port 8765",
    "build": "webpack --mode production && electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "meeting",
    "transcription",
    "ai",
    "knowledge-management",
    "productivity"
  ],
  "author": "Nexus Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "chromadb": "^1.9.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-store": "^8.2.0",
    "express": "^4.21.2",
    "fuse.js": "^7.0.0",
    "helmet": "^8.0.0",
    "ical-generator": "^8.0.2",
    "json2csv": "^6.0.0-alpha.2",
    "keytar": "^7.9.0",
    "marked": "^15.0.5",
    "node-cache": "^5.1.2",
    "openai": "^4.78.1",
    "rate-limiter-flexible": "^5.0.3",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.1.0",
    "css-loader": "^7.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "build": {
    "appId": "com.nexus.assistant",
    "productName": "Nexus Assistant",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/main/**/*",
      "src/renderer/**/*",
      "src/python/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/python",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg", "pkg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
