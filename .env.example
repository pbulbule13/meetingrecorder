# Nexus Assistant Environment Configuration

# ===== API Keys =====

# Speech-to-Text Providers (at least one required)
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# LLM Providers (at least one required)
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Search API (optional, for web grounding)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Calendar Integration (optional)
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_calendar_client_secret

# ===== Service Ports (Random/Uncommon Ports) =====

# Python Microservices
TRANSCRIPTION_SERVICE_PORT=38421
LLM_SERVICE_PORT=45231
RAG_SERVICE_PORT=53847

# Local API Server
API_SERVER_PORT=62194

# ===== Application Settings =====

# Embedding Model for RAG
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Default STT Provider (deepgram, assemblyai, openai, whisper_local)
DEFAULT_STT_PROVIDER=deepgram

# Default LLM Provider (gemini, openai, anthropic)
DEFAULT_LLM_PROVIDER=gemini

# Audio Recording Quality (low, medium, high)
RECORDING_QUALITY=high

# Auto-save interval (seconds)
AUTO_SAVE_INTERVAL=30

# ===== Security =====

# Master encryption password (leave empty for first-time setup)
MASTER_PASSWORD=

# Session timeout (minutes)
SESSION_TIMEOUT=60

# ===== Features =====

# Enable real-time assistance
ENABLE_REAL_TIME_ASSISTANCE=true

# Enable web search in RAG
ENABLE_WEB_SEARCH=true

# Enable analytics
ENABLE_ANALYTICS=true

# Auto-start on system boot
AUTO_START=false

# Minimize to tray
MINIMIZE_TO_TRAY=true

# ===== Data Retention =====

# Auto-delete recordings after N days (0 = never)
AUTO_DELETE_DAYS=0

# Keep summaries after transcript deletion
KEEP_SUMMARIES=true

# ===== Logging =====

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Max log file size (MB)
MAX_LOG_SIZE_MB=50

# Keep logs for N days
LOG_RETENTION_DAYS=30

# ===== Performance =====

# Max concurrent transcription jobs
MAX_CONCURRENT_TRANSCRIPTIONS=2

# LLM request timeout (seconds)
LLM_TIMEOUT=30

# STT request timeout (seconds)
STT_TIMEOUT=60

# Enable response caching
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL=3600

# ===== Development =====

# Node environment
NODE_ENV=production

# Python environment
PYTHON_ENV=production

# Enable debug mode
DEBUG=false

# Hot reload
HOT_RELOAD=false
